<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/side_nav_bar"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="bottom"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left">
        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"

            android:drawableLeft="@drawable/ic_home_black_24dp"

            android:background="@drawable/button_border"
            android:text="Home"
            android:textColor="#ffffff"
            />
        <Button
            android:layout_width="150dp"

            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_help_black_24dp"
            android:background="@drawable/button_border"

            android:text="Help"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/user_512x512"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="50dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAYMENTS"
        android:paddingLeft="15dp"
        android:paddingHorizontal="10dp"

        android:textSize="20sp"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"

        >
        <Button
            android:drawableTop="@drawable/ic_account_balance_black_24dp"
            android:background="@drawable/button_border"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:paddingHorizontal="10dp"
            android:text="Send Money"
            android:paddingVertical="15dp"
            android:layout_width="150dp"
            android:textColor="#ffffff"/>
        <Button
            android:drawableTop="@drawable/ic_account_balance_wallet_black_24dp"
            android:background="@drawable/button_border"
            android:paddingHorizontal="10dp"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:paddingVertical="15dp"
            android:text="Recharge"
            android:layout_width="150dp"
            android:textColor="#ffffff"/>
        <Button
            android:drawableTop="@drawable/paybill"
            android:background="@drawable/button_border"
            android:paddingHorizontal="10dp"
            android:text="Pay Bills"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:paddingVertical="15dp"
            android:layout_width="150dp"
            android:textColor="#ffffff"/>
        <Button
            android:drawableTop="@drawable/mov"
            android:background="@drawable/button_border"
            android:paddingHorizontal="10dp"
            android:text="Movie Tickets"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:paddingVertical="15dp"
            android:layout_width="150dp"
            android:textColor="#ffffff"/>
        <Button
            android:drawableTop="@drawable/add_funds"
            android:background="@drawable/button_border"
            android:paddingHorizontal="10dp"
            android:text="Add Funds"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:paddingVertical="15dp"
            android:layout_width="150dp"
            android:textColor="#ffffff"/>
        <Button
            android:drawableTop="@drawable/offer"
            android:background="@drawable/button_border"
            android:paddingHorizontal="10dp"
            android:paddingVertical="15dp"
            android:text="Offers"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_width="150dp"
            android:textColor="#ffffff"/>

    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVINGS"
        android:paddingLeft="15dp"
        android:paddingHorizontal="10dp"

        android:textSize="20sp"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="1"

        android:columnCount="2">
        <Button
            android:layout_width="150dp"

            android:layout_height="match_parent"
            android:drawableTop="@drawable/goals"
            android:background="@drawable/button_border"
            android:paddingHorizontal="10dp"
            android:text="iWish Goals"
            android:textAllCaps="false"
            android:paddingVertical="15dp"
            android:textSize="15sp"
            android:textColor="#ffffff"/>
        <Button
            android:paddingVertical="15dp"
            android:layout_width="150dp"

            android:layout_height="match_parent"
            android:drawableTop="@drawable/deposits"
            android:background="@drawable/button_border"
            android:paddingHorizontal="10dp"
            android:text="Deposits"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="left"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"

            android:drawableLeft="@drawable/ic_power_settings_new_black_24dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/button_border"
            android:text="Home"
            android:textColor="#ffffff"
            />
        <TextView
            android:layout_width="150dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="@drawable/button_border"
            android:paddingHorizontal="10dp"
            android:text="Version 1.0"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>
